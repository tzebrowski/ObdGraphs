<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tablelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:paddingEnd="2dip"  android:paddingStart="0dp">

        <TableRow

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingStart="0dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/vehicle_profile"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/trip_vehicle_profile"
                android:textColor="@color/gray_light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/trip_start_date"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:text="@string/trip_start_date"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/trip_time"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:text="@string/trip_time"
                android:textColor="@color/gray_light"
                android:textSize="15sp" />

            <LinearLayout
                android:paddingStart="0dp"
                android:paddingEnd="1dp"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/trip_load"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/trip_action_load"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:backgroundTint="@color/purple_200"
                    android:id="@+id/trip_delete"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/trip_action_delete"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
             <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>