<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tablelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:paddingEnd="2dip"  android:paddingStart="0dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingStart="0dp"
            android:paddingEnd="8dp">

            <CheckBox
                android:id="@+id/pid_selected"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pid_module"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/pids_module"
                android:textColor="@color/gray_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pid_file"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/pids_file"
                android:textColor="@color/gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pid_name"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:text="@string/pids_name"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pid_status"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:text="@string/pids_stable"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pid_supported"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:text="@string/pids_supported"
                android:textAllCaps="false"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pid_alert"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="14sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
             <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>