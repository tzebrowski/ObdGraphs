<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="30dp"
    android:layout_marginEnd="3dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="3dp"
    android:columnCount="3"
    android:rowCount="3"
    tools:context=".ui.gauge.GaugeViewFragment">

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        app:gaugeDividerColor="@color/md_yellow_500"
        app:gaugeDividerDrawFirst="false"
        app:gaugeDividerDrawLast="true"
        app:gaugeDividerSize="1"
        app:gaugeDividerStep="10"
        app:gaugePointEndColor="@color/md_red_900"
        app:gaugePointStartColor="@color/md_green_200"
        app:gaugeStartAngle="180"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_grey_500"
        app:gaugeStrokeWidth="6dp"
        app:gaugeSweepAngle="210" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="1sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="1sp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="#FFFF00"
            android:textSize="38sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="70sp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/min_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="min"
            android:textColor="#5CFFFF00"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/avg_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="avg"
            android:textColor="#5CFFFF00"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/max_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="max"
            android:textColor="#5CFFFF00"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/command_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#5CFFFF00"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

</GridLayout>