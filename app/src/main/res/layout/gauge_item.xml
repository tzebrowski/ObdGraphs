<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2sp"
    android:background="@drawable/gauge_item_background"
    tools:context=".ui.gauge.GaugeViewFragment">

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:gaugeDividerColor="@color/md_yellow_500"
        app:gaugeDividerDrawFirst="true"
        app:gaugeDividerDrawLast="true"
        app:gaugeDividerSize="1"
        app:gaugeDividerStep="10"
        app:gaugePointEndColor="@color/md_red_900"
        app:gaugePointStartColor="@color/md_green_200"
        app:gaugeStartAngle="180"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_grey_500"
        app:gaugeStrokeWidth="6dp"
        app:gaugeSweepAngle="180" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="1sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pid.value"
            android:textColor="#FFFF00"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4sp"
            android:text="@string/pid.label"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:paddingBottom="5sp">

        <TextView
            android:id="@+id/min_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pid.value_min"
            android:textColor="#5CFFFF00"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/avg_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pid.value_avg"
            android:textColor="#5CFFFF00"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/max_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pid.value_max"
            android:textColor="#5CFFFF00"
            android:textSize="22sp"
            android:textStyle="normal"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/command_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#5CFFFF00"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</RelativeLayout>