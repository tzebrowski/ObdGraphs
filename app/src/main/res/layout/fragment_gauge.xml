<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/button_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/virtual_view_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/virtual_view_1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_virtual_button_selector"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="@string/virtual_screen_1"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/virtual_view_2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_virtual_button_selector"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="@string/virtual_screen_2"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/virtual_view_3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_virtual_button_selector"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="@string/virtual_screen_3"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/virtual_view_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_virtual_button_selector"
                android:includeFontPadding="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="@string/virtual_screen_4"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/virtual_view_5"
