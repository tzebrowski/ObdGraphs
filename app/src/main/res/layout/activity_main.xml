<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/status_panel_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    android:text="@string/status_panel.adapter_connection_type"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/vehicle_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:padding="2dp"
                    android:text="@string/status_panel.vehicle_profile"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:maxWidth="200dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/connection_status"
                    app:layout_constraintStart_toEndOf="@id/connection_status" />

                <TextView
                    android:id="@+id/vehicle_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:padding="2dp"
                    android:text="@string/status_panel.vehicle_status"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/connection_status"
                    app:layout_constraintStart_toEndOf="@id/vehicle_profile" />

                <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/connection_status"
                    app:layout_constraintEnd_toStartOf="@id/toggle_fullscreen"
                    app:layout_constraintStart_toEndOf="@id/vehicle_status" />

                <ImageView
                    android:id="@+id/toggle_fullscreen"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/main_activity.toggle_toolbar"
                    android:focusable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/actionModeCopyDrawable" />

                <ProgressBar
                    android:id="@+id/p_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:indeterminate="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connection_status" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:navGraph="@navigation/mobile_navigation" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minHeight="72dp"
            android:theme="@style/AppTheme.CompactBottomBar"
            app:backgroundTint="#CCFFFFFF"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="4dp"
            app:fabCradleRoundedCornerRadius="2dp"
            app:fabCradleVerticalOffset="2dp"
            app:hideOnScroll="true"
            app:menu="@menu/bottom_nav_menu"
            app:navigationIconTint="@color/black" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/connect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_activity.connect_btn_content_description"
            android:src="@android:drawable/ic_lock_idle_charging"
            app:backgroundTint="#01804F"
            app:fabSize="normal"
            app:layout_anchor="@id/bottom_app_bar"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/configure_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            app:backgroundTint="@color/rainbow_indigo"
            app:fabSize="mini"
            app:layout_anchor="@id/connect_btn"
            app:layout_anchorGravity="center"
            android:visibility="invisible"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="12dp"
            android:id="@+id/configure_pids_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            app:backgroundTint="@color/rainbow_indigo"
            app:fabSize="mini"
            app:layout_anchor="@id/connect_btn"
            app:layout_anchorGravity="center"
            android:visibility="invisible"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/configure_view_action_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity.configure_view_action_label"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:elevation="12dp"
            android:visibility="invisible"
            app:layout_anchor="@id/connect_btn"
            app:layout_anchorGravity="end|center_vertical"
            android:translationX="36dp"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

        <TextView
            android:id="@+id/configure_pids_action_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity.configure_pids_action_label"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:elevation="12dp"
            android:visibility="invisible"
            app:layout_anchor="@id/connect_btn"
            app:layout_anchorGravity="end|center_vertical"
            android:translationX="36dp"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/leftNavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:backgroundTint="@color/gray"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/left_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>