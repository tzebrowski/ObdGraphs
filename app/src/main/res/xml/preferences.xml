<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="adapter"
        android:title="Adapter settings">

        <ListPreference
            android:defaultValue="wifi"
            android:dialogTitle="Adapter connection type"
            android:entries="@array/connection_type_array"
            android:entryValues="@array/connection_type_array"
            android:key="selected.connection.type"
            android:summary="Adapter connection type" />

        <PreferenceCategory
            android:key="connection.type.bluetooth"
            android:title="Bluetooth settings">

           <org.openobd2.core.logger.ui.preferences.AdaptersListPreferences
                android:defaultValue="@array/perf_empty_array"
                android:dialogTitle="Bluetooth adapter name"
                android:key="pref.adapter.id"
                android:summary="Available bluetooth devices" />
        </PreferenceCategory>


        <PreferenceCategory
            android:key="connection.type.wifi"
            android:title="Wifi settings">

            <EditTextPreference
                android:defaultValue="V-LINK"
                android:dialogTitle="SSID"
                android:key="pref.adapter.connection.tcp.wifi.ssid"
                android:summary="SSID" />

            <EditTextPreference
                android:defaultValue="192.168.0.10"
                android:dialogTitle="Host"
                android:key="pref.adapter.connection.tcp.host"
                android:summary="Host" />

            <EditTextPreference
                android:defaultValue="35000"
                android:dialogTitle="Port"
                android:key="pref.adapter.connection.tcp.port"
                android:summary="Port" />

        </PreferenceCategory>

        <PreferenceCategory
            android:key="diagnosis"
            android:title="Diagnosis">
            <CheckBoxPreference
                android:defaultValue="false"
                android:dialogTitle="Show commands freq"
                android:key="pref.adapter.diagnosis.command.frequency.enabled"
                android:summary="Show commands freq" />
        </PreferenceCategory>


        <PreferenceCategory android:title="General settings">

            <CheckBoxPreference
                android:defaultValue="true"
                android:dialogTitle="Batch enabled"
                android:key="pref.adapter.batch.enabled"
                android:summary="Enable batch mode" />


            <CheckBoxPreference
                android:defaultValue="false"
                android:dialogTitle="Adaptive timeout enabled"
                android:key="pref.adapter.adaptive.enabled"
                android:summary="Adaptive timeout enabled" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dialogTitle="Reconnect automatically"
                android:key="pref.adapter.reconnect"
                android:singleLineTitle="false"
                android:summary="Reconnect automatically when error occurs" />


            <ListPreference
                android:defaultValue="500"
                android:entries="@array/init_delay"
                android:entryValues="@array/init_delay"
                android:key="pref.adapter.init_delay"
                android:summary="Init delay" />

            <ListPreference
                android:defaultValue="6"
                android:entries="@array/command_frequency"
                android:entryValues="@array/command_frequency"
                android:key="pref.adapter.command.freq"
                android:summary="Command frequency" />

            <ListPreference
                android:defaultValue="Generic mode"
                android:dialogTitle="Adapter mode"
                android:entries="@array/perf_modes_arrays"
                android:entryValues="@array/perf_modes_arrays"
                android:key="pref.mode"
                android:summary="Adapter mode" />

        </PreferenceCategory>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="power"
        android:title="Power settings">
        <CheckBoxPreference
            android:defaultValue="false"
            android:dialogTitle="Connect adapter on power"
            android:key="pref.adapter.power.connect_adapter"
            android:summary="Connect adapter on power" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:dialogTitle="Screen off"
            android:key="pref.adapter.power.screen_off"
            android:summary="Screen off when disconnected" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:dialogTitle="Disable bluetooth"
            android:key="pref.adapter.power.bt_off"
            android:summary="Disable bluetooth" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Views">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.toolbar.hide.landscape"
            android:singleLineTitle="false"
            android:summary="Hide toolbar when landscape" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.toolbar.hide.doubleclick"
            android:singleLineTitle="false"
            android:summary="Hide toolbar when double click" />


    </PreferenceCategory>


    <PreferenceCategory android:title="Dashboard">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.dash.top.values.blink"
            android:singleLineTitle="false"
            android:summary="Alarm for highest values" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.dash.swipe.to.delete"
            android:singleLineTitle="false"
            android:summary="Swipe to delete metric" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.dash.top.values.red.color"
            android:singleLineTitle="false"
            android:summary="Highlight top values"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref.dash.view.enabled"
            android:summary="Enable the view" />


        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.graph.view.enabled"
            android:summary="Show the view" />


        <ListPreference
            android:defaultValue="0"
            android:entries="@array/dash_color_themes"
            android:entryValues="@array/dash_color_themes"
            android:key="pref.dash.theme"
            android:summary="Color theme" />

        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:key="pref.dash.pids.selected"
            android:summary="Dashboard: Displayed PIDs" />

        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:key="pref.dash.gauge_pids.selected"
            android:summary="Gauge: Displayed PIDs" />


        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.dash.gauge.view.visible"
            android:summary="Gauge: Show the view" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref.dash.dash.view.visible"
            android:singleLineTitle="false"
            android:summary="Dashboard: Show the view" />


    </PreferenceCategory>

    <PreferenceCategory android:title="Gauge">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref.gauge.view.enabled"
            android:summary="Enable the view" />


        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:defaultValue="@array/perf_empty_array"
            android:key="pref.gauge.pids.selected"
            android:summary="Displayed PIDs" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Graph">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.graph.view.enabled"
            android:summary="Show the view" />

        <CheckBoxPreference

            android:defaultValue="true"
            android:key="pref.graph.cache.enabled"
            android:summary="Cache enabled"/>

        <EditTextPreference
            android:inputType="number"
            android:defaultValue="20"
            android:dialogTitle="X-Axis: Moving time ms"
            android:key="pref.graph.x-axis.minimum-shift.time"
            android:singleLineTitle="false"
            android:summary="X-Axis moving time" />

        <EditTextPreference
            android:inputType="number"
            android:defaultValue="20000"
            android:dialogTitle="X-Axis: Start moving after ms"
            android:key="pref.graph.x-axis.start-moving-after.time"
            android:singleLineTitle="false"
            android:summary="X-Axis start moving after" />

        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:defaultValue="@array/perf_empty_array"
            android:key="pref.graph.pids.selected"
            android:summary="Displayed PIDs" />
    </PreferenceCategory>


    <PreferenceCategory android:title="Debug">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.debug.view.enabled"
            android:summary="Enable the view"/>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.debug.generator.enabled"
            android:summary="Enable data generator"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Available PIDs">
        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:key="pref.pids.generic"
            android:singleLineTitle="false"
            android:summary="Generic PID's for Mode 1" />

        <org.openobd2.core.logger.ui.preferences.PidListPreferences
            android:key="pref.pids.mode22"
            android:singleLineTitle="false"
            android:summary="Alfa Romeo specific PID's" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Metrics">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.metrics.view.enabled"
            android:summary="Enable the view" />
    </PreferenceCategory>
</PreferenceScreen>
