                    android:title="@string/pref.dtc.title"/>

                <CheckBoxPreference
                    android:summary="@string/pref.pids.group.enableDTCCleanup_summary"
                    app:singleLineTitle="false"
                    android:defaultValue="false"
                    android:dialogTitle="@string/pref.pids.group.enableDTCCleanup"
                    android:key="pref.adapter.init.cleanDTC"
                    android:title="@string/pref.pids.group.enableDTCCleanup"/>

                <CheckBoxPreference
                    android:summary="@string/pref.pids.group.enableDTCReadings_summary"
                    app:singleLineTitle="false"
                    android:defaultValue="false"
                    android:dialogTitle="@string/pref.pids.group.enableDTCReadings"
                    android:key="pref.adapter.init.fetchDTC"
                    android:title="@string/pref.pids.group.enableDTCReadings"/>

                <CheckBoxPreference
                    android:summary="@string/pref.pids.group.show_notification_summary"
                    app:singleLineTitle="false"
                    android:defaultValue="false"
                    android:dialogTitle="@string/pref.pids.group.show_notification"
                    android:key="pref.dtc.show_notification"
                    android:title="@string/pref.pids.group.show_notification"/>

            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref.power_category">
        <PreferenceScreen
            app:singleLineTitle="false"
            android:summary="@string/pref_power_settings_summary"
            android:key="pref.power"
            android:title="@string/pref.settings">

            <CheckBoxPreference
                android:defaultValue="false"
                android:dialogTitle="@string/pref.adapter_power_connect_adapter"
                android:key="pref.adapter.power.connect_adapter"
                android:title="@string/pref.adapter_power_connect_adapter" />

            <CheckBoxPreference
                app:singleLineTitle="false"
                android:defaultValue="false"
                android:dialogTitle="@string/pref.adapter_power_screen_off"
                android:key="pref.adapter.power.screen_off"
                android:title="@string/pref.adapter_power_screen_off" />

            <CheckBoxPreference
                android:defaultValue="false"
                android:dialogTitle="@string/pref.adapter_power_bt_off"
                android:key="pref.adapter.power.switch_network_on_off"
                android:summary="@string/pref.experimental_switch_network_enabled"
                android:title="@string/pref.adapter_power_bt_off"
                app:enabled="@bool/FF_SWITCH_NETWORK_ENABLED" />

            <EditTextPreference
                android:defaultValue="10"
                android:dialogTitle="@string/pref.adapter_power_start_data_logging_after"
