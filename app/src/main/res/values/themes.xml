<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/philippine_green</item>
        <item name="colorPrimaryDark">@color/philippine_green</item>
        <item name="colorAccent">@color/cardinal</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.DefaultTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/philippine_green</item>
        <item name="colorPrimaryVariant">@color/philippine_green</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rainbow_indigo</item>
        <item name="colorSecondaryVariant">@color/cardinal</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
    </style>


    <style name="AppTheme.CompactBottomBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="actionButtonStyle">@style/CompactActionButton</item>
        <item name="colorControlNormal">@color/black</item>

    </style>

    <style name="CompactActionButton" parent="Widget.AppCompat.ActionButton">

        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:translationY">8dp</item>

    </style>

</resources>